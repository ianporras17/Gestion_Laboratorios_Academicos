{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./*"],
      "@/types/*": ["types/*"],
      "@/services/*": ["services/*"],
      "@/app/*": ["app/*"],
      "@/components/*": ["components/*"]
    },
    "types": ["expo-router/types"]   // ðŸ‘ˆ IMPORTANTE
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
